<AudioTool>
    orientation: 'vertical'
    Label:
        id: display_label
        text: '00:00'
    BoxLayout:
        size_hint: 1, .2
        TextInput:
            id: user_input
            text: '5'
            disabled: duration_switch.active == False  # IF SWITCH IS OFF TEXTINPUT IS DISABLED
            on_text: root.enforce_numeric()

        Switch:
            id: duration_switch

    BoxLayout:
        Button:
            id: start_button
            text: 'Start Recording'
            on_release: root.start_recording_clock()

        Button:
            id: stop_button
            text: 'Stop Recording'
            on_release: root.stop_recording()
            disabled: True